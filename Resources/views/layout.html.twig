{% extends "TwigBundle::layout.html.twig" %}

{% block head %}
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/acmedemo/css/demo.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/asmtranslationloader/bootstrap/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/asmtranslationloader/css/default.css') }}" />

    <script src="{{ asset('bundles/asmtranslationloader/js/jquery-2.0.3.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/asmtranslationloader/js/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/asmtranslationloader/js/default.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %}
    {{ 'TranslationLoader Bundle'|trans }}
{% endblock %}

{% block body %}
<div id="translation-loader">
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}
    <div id="translation-modal-layer">
        <div class="content"></div>
    </div>
    <div class="block">
        {% block content %}{% endblock %}
    </div>
</div>
{% endblock %}
